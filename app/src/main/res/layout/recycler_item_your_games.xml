<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/your_games_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/your_pic"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="19dp" />


    <TextView
        android:id="@+id/your_ganres_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/your_name_text"
        android:layout_marginBottom="-28dp"
        android:layout_toEndOf="@id/your_pic"
        android:text="@string/genres_text" />

    <TextView
        android:id="@+id/your_name_text"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/your_pic"
        android:layout_toEndOf="@id/your_pic"
        android:layout_marginBottom="16dp"
        tools:text="bbb" />

    <TextView
        android:id="@+id/your_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/release_date_text"
        android:layout_alignTop="@+id/your_ganres_text"
        android:layout_toEndOf="@id/your_pic"
        android:layout_marginTop="62dp"/>

    <TextView
        android:id="@+id/your_date_cont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="wwww"
        android:layout_alignTop="@+id/your_ganres_text"
        android:layout_marginTop="62dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/your_date_text"/>

    <HorizontalScrollView
        android:layout_toEndOf="@id/your_pic"
        android:layout_marginTop="16dp"
        android:layout_width="136dp"
        android:layout_height="36dp"
        android:layout_alignTop="@id/your_ganres_text">

        <LinearLayout
            android:id="@+id/your_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

    </HorizontalScrollView>

    </RelativeLayout>

    <Button
        android:id="@+id/delete_game_button"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="wweqwe"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>


</RelativeLayout>